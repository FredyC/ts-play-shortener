{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true
  },
  "compileOnSave": false
}
